{
  "name": "@casoon/auditmysite",
  "version": "1.2.1",
  "description": "Simplified accessibility testing tool with Core Web Vitals - just works out of the box! Test websites for WCAG compliance with real performance metrics.",
  "main": "dist/index.js",
  "bin": {
    "auditmysite": "./bin/audit.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsc --watch",
    "test": "node test/run-tests.js",
    "test:mock-server": "node test/mock-server/server.js",
    "test:suite": "node test/test-suite.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\""
  },
  "keywords": [
    "accessibility",
    "testing",
    "cli",
    "playwright",
    "pa11y",
    "wcag",
    "audit",
    "compliance",
    "web-vitals",
    "core-web-vitals",
    "performance",
    "lcp",
    "fcp",
    "cls",
    "ttfb",
    "html-reports",
    "sitemap",
    "simple",
    "out-of-the-box"
  ],
  "author": {
    "name": "Jörn Seidel",
    "email": "joern.seidel@casoon.de",
    "url": "https://casoon.de"
  },
  "company": "CASOON",
  "contributors": [
    {
      "name": "Jörn Seidel",
      "email": "joern.seidel@casoon.de",
      "role": "Lead Developer"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "chalk": "^5.6.0",
    "commander": "^12.1.0",
    "express": "^4.21.2",
    "inquirer": "^10.2.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.2.0",
    "pa11y": "^7.0.0",
    "playwright": "^1.55.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^22.10.0",
    "@types/pa11y": "^5.3.7",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "prettier": "^3.5.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "web-vitals": "^5.1.0"
  },
